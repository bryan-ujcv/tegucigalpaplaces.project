<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/info_background">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/horario"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="232dp" android:layout_marginEnd="176dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtHorario"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="68dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="232dp"/>
    <TextView
            android:text="@string/ubicacion"
            android:layout_width="62dp"
            android:layout_height="17dp" android:id="@+id/txtUbicacion"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="148dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp"/>
    <ImageView
            android:layout_width="285dp"
            android:layout_height="294dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imgBar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="63dp" android:layout_marginEnd="63dp"
            app:layout_constraintEnd_toEndOf="parent"/>
