<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/info_background">

    <TextView
            android:text="TextView"
            android:layout_width="234dp"
            android:layout_height="17dp" android:id="@+id/horario"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="236dp" android:layout_marginEnd="160dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtHorario"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="260dp"/>
    <TextView
            android:text="@string/ubicacion"
            android:layout_width="363dp"
            android:layout_height="24dp" android:id="@+id/txtUbicacion"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="168dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="285dp"
            android:layout_height="294dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imgBar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="63dp" android:layout_marginEnd="63dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="290dp"
            android:layout_height="76dp" android:id="@+id/ubicacion"
            android:layout_marginEnd="104dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="238dp"
            android:layout_height="34dp" android:id="@+id/txtNombre"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/imgBar"
            android:textAllCaps="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>