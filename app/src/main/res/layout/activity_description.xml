            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ubicacion"
            android:layout_marginEnd="176dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="148dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtNombre"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="175dp"
            android:layout_marginTop="54dp" app:layout_constraintTop_toBottomOf="@+id/imgBar"/>
</androidx.constraintlayout.widget.ConstraintLayout>